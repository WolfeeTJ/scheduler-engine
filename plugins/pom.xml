    <build>
    <!-- 
     -->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
				          <includes>
				            <!--
				            Dieser Test führt zu einem Fehler, wenn er mit den Tests unten zusammen ausgeführt wird.
				            Läuft er alleine, funktioniert's. 
				            <include>**/ConnectorTest.java</include>  
				            -->
				            <include>**/JmsEventFilterTest.java</include>
				            <include>**/JmsOrderEventsTest.java</include>
				          </includes>
                </configuration>
            </plugin>
        </plugins>
        <testResources>
            <testResource>
                <!-- Standard Wiederholen -->
                <directory>${basedir}/src/test/resources</directory>
            </testResource>
            <testResource>
                <!-- Resourcen können neben dem Quellcode abgelegt werden. Der Quellcode selbst wird nicht als Resource übernommen. -->
                <directory>${project.build.testSourceDirectory}</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </testResource>
        </testResources>
    </build>

