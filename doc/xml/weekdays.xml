<xml_element name     = "weekdays" 
             title    = "Laufzeit für bestimmte Wochentage"
             base_dir = ".."
             author   = "$Author: jz $"
             date     = "$Date: 2004/08/23 11:15:32 $">

    <xml_parent_elements>
        <xml_parent_element name="run_time">
        </xml_parent_element>        
    </xml_parent_elements>
    

    <xml_child_elements>
        <xml_child_element name="day" multiple="yes">
            <description>
                <p>
                    Bestimmt den Wochentag. 
                </p>
            </description>
        </xml_child_element>        
    </xml_child_elements>
    
    
    
    <description>
        <p>
            Setzt die Perioden für bestimmten Wochentage fest.
        </p>
    </description>
    
    <description for_element="base">
        <p>
            Ersetzt ein &lt;date> mit gleichem Datum aus der Basiskonfiguration.
        </p>
    </description>
    
    <example>
        <pre>
&lt;weekdays>
    &lt;day day="1" begin="10:00" end="12:00"/>
    &lt;day day="2">
        &lt;period begin="08:00" end="12:00"/>
        &lt;period begin="15:00" end="18:00"/>
    &lt;/day>
&lt;/day>    
        </pre>
        <p>
            Setzt die Laufzeit fest für Montags 10:00 bis 12:00 und
            Dienstags 08:00 bis 12:00 und 15:00 bis 18:00.
        </p>
    </example>
    
</xml_element>
