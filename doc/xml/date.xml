<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="../scheduler.xslt" type="text/xsl"?>

<!--$Id: date.xml,v 1.1 2004/08/23 11:15:32 jz Exp $-->

<xml_element name     = "date" 
             title    = "Laufzeit für ein bestimmtes Datum"
             base_dir = ".."
             author   = "$Author: jz $"
             date     = "$Date: 2004/08/23 11:15:32 $">

    <xml_parent_elements>
        <xml_parent_element name="run_time">
        </xml_parent_element>        
    </xml_parent_elements>
    
    <xml_attributes>
        <xml_attribute name="date" value="yyyy-mm-dd">
            <description>
                Das Datum.
            </description>
        </xml_attribute>

        <xml_attribute name="let_run"       same_as_element="run_time"/>
        <xml_attribute name="single_start"  same_as_element="run_time"/>
        <xml_attribute name="begin"         same_as_element="run_time"/>
        <xml_attribute name="end"           same_as_element="run_time"/>
    </xml_attributes>
    
    
    <xml_child_elements>
        <xml_child_element name="period" multiple="yes">
            <description>
                <p>
                    Die Perioden für den Tag.
                </p>
            </description>
        </xml_child_element>        
    </xml_child_elements>
    
    
    
    <description>
        <p>
            setzt die Perioden für einen bestimmten Tag fest.
        </p>
    </description>
    
    <description for_element="base">
        <p>
            Ersetzt ein &lt;date> mit gleichem Datum aus der Basiskonfiguration.
        </p>
    </description>
    
    <example>
        <pre>
&lt;date date="2004-08-22">
    &lt;period begin="10:00" end="12:00"/>
    &lt;period begin="16:00" end="22:00"/>
&lt;/date>    
        </pre>
    </example>
    <example>
        <pre>
&lt;date date="2004-09-02" begin="14:00" end="18:00"/>
        </pre>
    </example>
    
</xml_element>
