<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="../scheduler.xsl" type="text/xsl"?>

<!--$Id$-->

<xml_element name     = "process_classes" 
             title    = "Prozessklassen"
             category = "Konfiguration"
             base_dir = "../"
             parent_page = "../konfiguration.xml"
             author   = "$Author$"
             date     = "$Date$">

    <xml_parent_elements>
        <xml_parent_element name="config">
        </xml_parent_element>        
    </xml_parent_elements>

    <xml_child_elements>
        <xml_child_element name="process_class" multiple="yes">
        </xml_child_element>        
    </xml_child_elements>
        
    <behavior_with_xml_element element="base" complete="yes"/>
    
    <description>
        <p>
            Dieses Element sollten Sie (wenigstens leer) angegeben, damit der Scheduler Tasks in eigenen Prozessen ablaufen lässt.
            Andernfalls laufen die Tasks im Prozess des Schedulers, was nur zum Debuggen empfohlen wird.
        </p>
    </description>

    <example>
        <pre>
&lt;process_classes>
    &lt;process_class                max_processes="3"/>
    &lt;process_class name="klasse2" max_processes="3"/>
&lt;/process_classes>
        </pre>
    </example>
    
    <example>
        <pre>
&lt;process_classes/>
        </pre>
        <p>
            Lässt die Tasks in eigenen Prozessen ablaufen.
        </p>
    </example>
    
</xml_element>
