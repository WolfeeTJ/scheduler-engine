<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="../scheduler.xsl" type="text/xsl"?>

<!--$Id$-->

<xml_element name     = "param.get"
             title    = "Scheduler-Parameter zeigen"
             base_dir = "../"
             parent_page = "../xml_commands.xml"
             author   = "$Author$"
             date     = "$Date$">

    <xml_attributes>
        <xml_attribute name="name" type="name" title="Name des Parameters"/>
    </xml_attributes>

    <description>
        <p>
            Liefert <scheduler_element directory="xml/answer/" name="param"/> mit dem Scheduler-Parameter
            oder <scheduler_element directory="xml/answer/" name="ok"/>, wenn er unbekannt ist.
        </p>
    </description>

    <xml_answer element="param"/>

</xml_element>
