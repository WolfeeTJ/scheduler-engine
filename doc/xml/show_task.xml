<xml_element name     = "show_task" 
             title    = ""
             base_dir = "../"
             parent_page = "../xml_commands.xml"
             author   = "$Author: jz $"
             date     = "$Date: 2004/09/09 21:45:05 $">


    <description>
        <p>
            Zeigt Informationen einer laufenden Task oder eine Task aus der Historie.
        </p>
    </description>


    <xml_attributes>
        <xml_attribute name="id" type="zahl">
            <description>
                <p>
                    Die Task-Id.
                    (<i>Das Attribut sollte nicht <code>id</code> hei√üen, das Wort ist in XML reserviert.</i>)
                </p>
            </description>
        </xml_attribute>
        
        <xml_attribute name="what" same_as_element="show_state"/>
    </xml_attributes>

    <xml_answer element="task"/>
    
    
    <example>
        <pre>
&lt;show_task id="4711"/>
        </pre>
    </example>
</xml_element>    
