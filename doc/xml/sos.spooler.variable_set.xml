<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="../scheduler.xsl" type="text/xsl"?>

<!--$Id$-->

<xml_element name     = "sos.spooler.variable_set"
             title    = "Variablenmenge"
             base_dir = "../"
             parent_page = "../konfiguration.xml"
             author   = "$Author$"
             date     = "$Date$">

    <xml_child_elements>
        <xml_child_element name="variable"/>
    </xml_child_elements>


    <example><pre>
&lt;sos.spooler.variable_set>
    &lt;variable name="param1" value="11111">
    &lt;variable name="param2" value="2222">
&lt;/sos.spooler.variable_set>
</pre>

    </example>
    
    <description>
        <p>
            <code>&lt;sos.spooler.variable_set></code> wird beim Speichern der 
            <scheduler_method class="Order" property="payload"/> 
            in der Datenbank verwendet.
        </p>
        <p>
            Siehe auch <scheduler_element name="params"/>.
        </p>
    </description>

</xml_element>
