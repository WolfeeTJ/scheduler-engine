<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="../scheduler.xsl" type="text/xsl"?>

<!--$Id$-->

<xml_element name          = "xml_payload"
             title         = "XML-Nutzlast"
             base_dir      = "../"
             parent_page   = "../xml_commands.xml"
             author        = "$Author$"
             date          = "$Date$">

    <xml_parent_elements>
        <xml_parent_element directory="xml/answer/" name="order"/>
        <xml_parent_element directory="xml/" name="add_order"/>
        <xml_parent_element name="modify_order"/>
    </xml_parent_elements>


    <description>
        <p>
            <code>&lt;xml_payload></code> enthält genau ein XML-Element (mit beliebig vielen Kind-Elementen).
            Die Eigenschaft <scheduler_method class="Order" property="xml_payload"/> enthält dieses Element als XML-Text.
        </p>
    </description>

</xml_element>
