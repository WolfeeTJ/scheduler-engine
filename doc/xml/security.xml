<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="../scheduler.xslt" type="text/xsl"?>

<!--$Id: security.xml,v 1.5 2004/08/24 07:43:44 jz Exp $-->

<xml_element name     = "security" 
             title    = "Zugriffsschutz für TCP, HTTP und UDP"
             base_dir = ".."
             author   = "$Author: jz $"
             date     = "$Date: 2004/08/24 07:43:44 $">

    <xml_parent_elements>
        <xml_parent_element name="config">
        </xml_parent_element>        
    </xml_parent_elements>

    <xml_attributes>
        <xml_attribute name="ignore_unknown_hosts" value="yes_no" initial="no">
            <description>
                <p>
                    Mit <code>ignore_unknown_hosts="yes"</code> ignoriert der Scheduler unbekannte oder nicht auflösbare Hostnamen in
                    <code>&lt;allowed_host></code>. 
                </p>
                <p>
                    Das Attribut wirkt nur auf die hier angegebenen <code>&lt;allowed_host></code>, 
                    nicht auf die Basiskonfiguration.
                </p>
            </description>
        </xml_attribute>   
    </xml_attributes>    

    <xml_child_elements>
        <xml_child_element name="allowed_host">
        </xml_child_element>        
    </xml_child_elements>

    <behavior_with_xml_element element="base" complete="yes"/>

    <description>
        <p>
            <code>&lt;security></code> gibt die Rechner und Netzwerke an, die per TCP und UDP Kommandos ausführen dürfen.
        </p>
    </description>
</xml_element>
