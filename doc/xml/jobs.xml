<xml_element name     = "jobs"
             title    = "Jobs"
             category = "Konfiguration"
             base_dir = "../"
             parent_page = "../konfiguration.xml"
             author   = "$Author$"
             date     = "$Date$">

    <xml_parent_elements>
        <xml_parent_element name="config">
        </xml_parent_element>
    </xml_parent_elements>

    <xml_child_elements>
        <xml_child_element name="job" multiple="yes" title="Die Definition eines Jobs">
