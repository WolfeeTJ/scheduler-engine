<xml_element name     = "variable" 
             title    = "Eine Variable"
             category = "Konfiguration"
             base_dir = "../"
             parent_page = "../konfiguration.xml"
             author   = "$Author: jz $"
             date     = "$Date: 2004/12/07 14:09:47 $">

    <xml_parent_elements>
        <xml_parent_element name="environment">
        </xml_parent_element>        
    </xml_parent_elements>

    <xml_attributes>
        <xml_attribute name="name"/>
        
        <xml_attribute name="value">
            <description>
                <p>
                    Mit '$' kann der Wert einer Umgebungsvariablen abgerufen werden,
                    die auch eine vorher mit <code>&lt;variable></code> gesetze Variable sein kann.
                </p>
            </description>
        </xml_attribute>
    </xml_attributes>
        
    
    <behavior_with_xml_element element="base" complete_attribute="name"/>
    
</xml_element>
