<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="../scheduler.xsl" type="text/xsl"?>

<!--$Id$-->

<xml_element name     = "param"
             title    = "Ein Parameter"
             base_dir = "../"
             parent_page = "../konfiguration.xml"
             author   = "$Author$"
             date     = "$Date$">

    <description>
        <p>
            Siehe <scheduler_element name="params" />.
        </p>
        <p>
            Bestimmt einen einzelnen Parameter für einen Job oder für einen Auftrag.
            Die Parameter können zur Laufzeit überschrieben und erweitert werden.
        </p>
        <p>
            <scheduler_a href="../variable_substitution.xml">Umgebungsvariablen</scheduler_a>
            können innerhalb bestimmter Zusammenhänge abgerufen werden, siehe das Attribut <code>value</code>.
        </p>
        <p>
            Job-Parameter können mit der Methode <scheduler_method class="Task" method="params" /> abgerufen werden.
        </p>
        <p>
            Parameter eines Auftrags können mit der Methode <scheduler_method class="Order" method="params" /> abgerufen werden.
        </p>
        <p>
            Siehe auch die Klasse <scheduler_method class="Variable_set" />.
        </p>
    </description>

    <xml_parent_elements>
        <xml_parent_element name="params">
        </xml_parent_element>
    </xml_parent_elements>

    <xml_attributes>
        <xml_attribute name="name" title="Eindeutiger Name"/>
        <xml_attribute name="value" subst_env="yes">
            <description>
                <p>
                    In bestimmten Zusammenhängen kann das <code>$</code>-Zeichen verwendet werden,
                    um Umgebungsvariablen zu ersetzen. Das sind
                </p>
                <ul>
                    <li>
                        <scheduler_element name="add_order"/>
                    </li>
                    <li>
                        <scheduler_element name="start_job"/>
                    </li>
                </ul>
            </description>
        </xml_attribute>
    </xml_attributes>


    <behavior_with_xml_element element="base" complete_attribute="name"/>

</xml_element>
