<xml_element name     = "kill_task" 
             title    = ""
             category = "Kommando"
             base_dir = "../"
             parent_page = "../xml_commands.xml"
             author   = "$Author: jz $"
             date     = "$Date: 2004/12/10 11:20:39 $">


    <description>
        <p>
        </p>
    </description>

    <xml_attributes>
        <xml_attribute name="job" type="job_name">
            <description>
                <p>
                    Der Jobname.
                </p>
            </description>
        </xml_attribute>
        
        <xml_attribute name="id" type="zahl">
            <!-- Text wird von anderen XML-Dokumenten mitbenutzt. Also allgemein halten! -->
            <description>
                <p>
                    Die Task-Id.
                    (<i>Das Attribut sollte nicht <code>id</code> hei√üen, das Wort ist in XML reserviert.</i>)
                </p>
            </description>
        </xml_attribute>

        <xml_attribute name="immediately" type="yes|no" initial="no"/>
    </xml_attributes>

    <xml_answer element="ok"/>
    
    <example>
        <pre>
&lt;kill_task job="mein_job" id="4711"/>
        </pre>
    </example>
</xml_element>    
