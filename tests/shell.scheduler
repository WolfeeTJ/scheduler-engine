                    </script>
                </monitor-->

                <run_time once="yes"/>
            </job>

            <job name="test2" order="yes" title="Aufruf von /tmp/test.cmd">
                <process file="/tmp/test.cmd" param="Mein Parameter">
                    <environment>
                        <variable name="var1" value="222"/>
                    </environment>
                </process>
                <run_time/>
            </job>

            <job name="shell">
                <script language="shell">#! /bin/bash -v
echo Hallo
sleep 10&amp;
exit 37
                </script>
                <run_time once="yes"/>
            </job>
        </jobs>
    </config>
</spooler>
