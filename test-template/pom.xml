<?xml version="1.0" encoding="utf-8"?>
<!-- 
  To prepare your java project for using jobscheduler binaries use
    mvn generate-resources -Dbase.version=<version>
 -->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.sos.scheduler.engine</groupId>
        <artifactId>com.sos.scheduler.engine.parent</artifactId>
        <version>1.3.13-beta-1a-SNAPSHOT</version>
        <relativePath>parent</relativePath>
    </parent>

    <groupId>com.sos.scheduler.engine</groupId>
    <artifactId>com.sos.scheduler.engine.test</artifactId>
    <version>1.0.01</version>
    <inceptionYear>2011</inceptionYear>
    <description>unit tests for JobScheduler</description>
    
    <properties>
      <engine.version>1.3.13-beta-1a-SNAPSHOT</engine.version>
    </properties>    

    <organization>
    	<name>SOS Software GmbH, Berlin</name>
    	<url>www.sos-berlin.com</url>
    </organization>

    <build>
        <resources>
            <resource>
                <!-- Standard Wiederholen -->
                <directory>${basedir}/src/main/resources</directory>
            </resource>
            <resource>
                <!-- Resourcen können neben dem Quellcode abgelegt werden. Der Quellcode selbst wird nicht als Resource übernommen. -->
                <directory>${project.build.sourceDirectory}</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <!-- Standard wiederholen -->
                <directory>${basedir}/src/test/resources</directory>
            </testResource>
            <testResource>
                <!-- Resourcen können neben dem Quellcode abgelegt werden. Der Quellcode selbst wird nicht als Resource übernommen. -->
                <directory>${project.build.testSourceDirectory}</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </testResource>
        </testResources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <!-- excluded contains test cases not executed in the test phase (e.g. for unresolved jira issues) -->  
	                <excludes>
                        <exclude>com/sos/scheduler/engine/test/excluded/**/*.java</exclude>
	                </excludes>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>com.sos.scheduler.engine</groupId>
            <artifactId>com.sos.scheduler.engine.jar</artifactId>
        		<version>${engine.version}</version>
        </dependency>

        <dependency>
            <groupId>com.sos.scheduler.engine</groupId>
            <artifactId>com.sos.scheduler.engine.plugins</artifactId>
        		<version>${engine.version}</version>
        </dependency>
        
        <dependency>
            <groupId>com.sos.scheduler.engine</groupId>
            <artifactId>com.sos.scheduler.engine.jar</artifactId>
        		<version>${engine.version}</version>
        </dependency>
        
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>com.sos.scheduler.engine.kernel-cpp</artifactId>
        		<version>${engine.version}</version>
            <classifier>${osArch}-test</classifier>
            <scope>test</scope>
        </dependency>
    	        
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
        </dependency>

        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit-dep</artifactId>
        </dependency>

    </dependencies>

</project>
