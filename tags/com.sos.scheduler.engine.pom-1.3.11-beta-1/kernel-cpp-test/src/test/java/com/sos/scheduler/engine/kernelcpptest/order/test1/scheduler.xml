<?xml version="1.0" encoding="utf-8"?>
<spooler
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="s:/scheduler/kernel/core-cpp/prod/scheduler/scheduler.xsd"
>
    <config>
        <security>
            <allowed_host host="localhost" level="info"/>
        </security>

        <jobs>
            <job name="job.1" order="yes">
                <script language="javascript"><![CDATA[
function spooler_process() {
    return true;
}
                ]]></script>
            </job>

            <job name="job.2" order="yes">
                <script language="javascript"><![CDATA[
function spooler_process() {
    return true;
}
                ]]></script>
            </job>
        </jobs>


        <job_chains>
            <job_chain name="myJobChain">
                <job_chain_node     state="state.1" job="job.1" error_state="state.error"/>
                <job_chain_node     state="state.2" job="job.2" error_state="state.error"/>
                <job_chain_node.end state="state.end"/>
                <job_chain_node.end state="state.error"/>
            </job_chain>
        </job_chains>

        <commands>
            <modify_job job="job.1" cmd="unstop"/>
            <modify_job job="job.2" cmd="unstop"/>
            <add_order job_chain="myJobChain" id="id.1"/>
        </commands>
    </config>
</spooler>
