<?xml version="1.0" encoding="utf-8"?>
<!--
call prepare-setup.sh <version> to use this pom
-->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <parent>
        <groupId>com.sos.scheduler.engine</groupId>
        <artifactId>com.sos.scheduler.engine</artifactId>
        <version>1.3.13-beta-1a-SNAPSHOT</version>
    </parent>
    
    <properties>
      <setup.version>1.3.13-beta-1a-SNAPSHOT</setup.version>
      <setup.platform>${osArch}</setup.platform>
    </properties>
    
    <artifactId>com.sos.scheduler.engine.setup</artifactId>
    <packaging>pom</packaging>
    <name>${project.artifactId}</name>

    <profiles>
    
      <!-- this profile is for preparing the setup for a given version on a given platform, e.g.
            mvn install -Pprepare -Dversion=1.3.11 -Dplatform=windows-x86
      -->
      <profile>
        <id>prepare</id>
        <properties>
          <setup.version>${version}</setup.version>
          <setup.platform>${platform}</setup.platform>
        </properties>
      </profile>
    </profiles>

    <build>
      <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <configuration>
                <artifactItems>
                    <artifactItem>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>com.sos.scheduler.engine.jar</artifactId>
                        <version>${setup.version}</version>
                        <type>jar</type>
                    </artifactItem>
                    <artifactItem>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>com.sos.scheduler.engine.jar</artifactId>
                        <version>${setup.version}</version>
                        <type>pom</type>
                    </artifactItem>
                    <artifactItem>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>com.sos.scheduler.engine.kernel-cpp</artifactId>
                        <version>${setup.version}</version>
                        <type>zip</type>
                        <classifier>${setup.platform}</classifier>
                    </artifactItem>
                </artifactItems>
            </configuration>
            <executions>
                <execution>
                    <phase>install</phase>
                    <goals>
                        <goal>copy</goal>
                    </goals>
                </execution>
            </executions>
        </plugin>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <configuration>
                <includeScope>runtime</includeScope>
            </configuration>
            <executions>
                <execution>
                    <phase>install</phase>
                    <goals>
                        <goal>copy-dependencies</goal>
                    </goals>
                </execution>
            </executions>
        </plugin>
        <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <configuration>
                <tasks>
                    <ant antfile="download4setup.xml" target="setup.platform">
                       <property name="setup.platform" value="${setup.platform}" />
                       <property name="setup.version" value="${setup.version}" />
                       <property name="settings.localRepository" value="${settings.localRepository}" />
                    </ant>
                </tasks>
            </configuration>
            <executions>
                <execution>
                    <phase>install</phase>
                    <goals>
                        <goal>run</goal>
                    </goals>
                </execution>
            </executions>
        </plugin>
      </plugins>
    </build>

    <dependencies>
        <!-- Artefakte, deren Jars in einem Jar zusammengefasst werden. -->

        <!--
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>com.sos.scheduler.engine.kernel.cppproxy-generated</artifactId>
            <version>${setup.version}</version>
            <scope>runtime</scope>
        </dependency>
        -->
        
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>com.sos.scheduler.engine.kernel</artifactId>
            <version>${project.version}</version>
            <scope>runtime</scope>
        </dependency>
        
        <dependency>
            <groupId>com.sos.scheduler.engine</groupId>
            <artifactId>com.sos.scheduler.engine.cplusplus.runtime</artifactId>
            <version>${project.version}</version>
            <scope>runtime</scope>
        </dependency>
        
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>com.sos.scheduler.engine.plugins</artifactId>
            <version>${project.version}</version>
            <scope>runtime</scope>
        </dependency>
        
    </dependencies>
</project>
