<!--         title         = "Liste der laufenden Tasks"-->

<xml_element name          = "tasks" 
             title         = "List of Tasks Currently Running"
             category      = "Answer"
             sub_directory = "answer/"
             base_dir      = "../../"
             parent_page   = "../../xml_commands.xml"
             author        = "$Author: jz $"
             date          = "$Date$">

    <xml_parent_elements>
        <xml_parent_element name="job"/>
    </xml_parent_elements>
    
    <xml_attributes>
        <xml_attribute name="count" type="number">
    <!--<xml_attribute name="count" type="zahl">-->
            <description>
                The number of tasks currently running.
            <!--Anzahl der laufenden Tasks.-->
            </description>
        </xml_attribute>
    </xml_attributes>
    
    <xml_child_elements>
        <xml_child_element name="task" multiple="yes"/>
    </xml_child_elements>

</xml_element>
