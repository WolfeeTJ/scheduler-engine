<xml_element name     = "param.get"
             title    = "Show Job Scheduler variables"
             base_dir = "../"
             parent_page = "../xml_commands.xml"
             author   = "$Author: jz $"
             date     = "$Date$">

    <xml_attributes>
        <xml_attribute name="name" type="name" title="The parameter name"/>
    <!--<xml_attribute name="name" type="name" title="Name des Parameters"/>-->
    </xml_attributes>

    <description>
        <p>
            Returns <scheduler_element directory="xml/answer/" name="param"/> with the Job Scheduler parameter
            or <scheduler_element directory="xml/answer/" name="ok"/>, when the parameter is not known.
        <!--Liefert <scheduler_element directory="xml/answer/" name="param"/> mit dem Scheduler-Parameter
            oder <scheduler_element directory="xml/answer/" name="ok"/>, wenn er unbekannt ist.-->
        </p>
    </description>

    <xml_answer element="param"/>

</xml_element>
