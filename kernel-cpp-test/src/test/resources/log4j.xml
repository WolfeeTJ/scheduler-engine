<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender class="org.apache.log4j.ConsoleAppender" name="console">
        <layout class="org.apache.log4j.PatternLayout">
            <param value="%d{ISO8601} %-5p [%t] %c: %m%n" name="ConversionPattern"/>
        </layout>
    </appender>
    
    <logger name="org.apache.activemq">
        <level value="warn"/>
        <appender-ref ref="console"/>
    </logger>
    
    <logger name="org.apache.activemq.spring">
        <level value="warn"/>
        <appender-ref ref="console"/>
    </logger>
    
	<!--
	in general the debug level should be 'warn'. if you need 'debug' or 'info' level
	for special cases please use a special logger defined above.
	-->
    <root>
        <level value="warn"/>
        <appender-ref ref="console"/>
    </root>
    
</log4j:configuration>
