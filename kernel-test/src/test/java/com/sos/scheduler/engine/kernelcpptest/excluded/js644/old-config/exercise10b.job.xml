<?xml version="1.0" encoding="ISO-8859-1"?>

<job order="yes"
     stop_on_error="no">
    <script language="shell">
        <![CDATA[
echo hello world
ping -n 3 localhost
exit 0
        ]]>
    </script>
    <delay_order_after_setback setback_count="1"
                               is_maximum="no"
                               delay="10"/>
    <delay_order_after_setback setback_count="3"
                               is_maximum="no"
                               delay="20"/>
    <delay_order_after_setback setback_count="5"
                               is_maximum="yes"
                               delay="0"/>
    <run_time/>
</job>
