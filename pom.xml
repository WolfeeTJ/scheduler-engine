<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>engine</artifactId>
    <packaging>pom</packaging>

    <parent>
        <groupId>com.sos.scheduler.engine</groupId>
        <artifactId>parent</artifactId>
        <version>1.3.2251</version>
        <relativePath>parent</relativePath>
    </parent>

    <name>${project.artifactId}</name>
    <inceptionYear>2010</inceptionYear>

    <properties>
        <sos.jars.version>2131</sos.jars.version>            <!-- verwendete Version der jar Files der SOS, vorher mit setup/deploy-sos-jars deployen: ant -f deploy-sos-jars.xml -Djar.version=x.x.xx.xxxx -->
    </properties>

    <modules>
        <module>cppjava</module>
        <module>opensource</module>
        <module>parent</module>
        <module>plugins</module>
        <module>playground</module>
        <module>setup</module>
    </modules>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <tagBase>scm:git:git@github.com:sos-berlin/scheduler-engine.git</tagBase>
                    <!--tagNameFormat>{1}</tagNameFormat--><!-- {0} ist ${project.artifactId}, {1} ist ${project.version} -->
                </configuration>
            </plugin>
        </plugins>
    </build>

    <scm>
        <!-- Falls release:prepare <scm> geändert hat (die Versionsbezeichnungen angehängt hat), so soll es für Snapshot aussehen:
        <connection>scm:svn:http://subversion.sos/svn/sos/scheduler/engine</connection>
        <developerConnection>scm:svn:http://subversion.sos/svn/sos/scheduler/engine</developerConnection>
        <url>http://subversion.sos/svn/sos/scheduler/engine</url>
        -->
        <connection>scm:git:git@github.com:sos-berlin/scheduler-engine.git</connection>
        <developerConnection>scm:git:git@github.com:sos-berlin/scheduler-engine.git</developerConnection>
        <url>https://github.com/sos-berlin/scheduler-engine</url>
    </scm>

    <profiles>
        <profile>
            <id>release</id>
            <properties>
                <!-- Versionsbezeichnungen für die nächste Freigabe und die darauffolgende Entwicklungsversion hier einstellen -->
                <releaseVersion>1.3.2251</releaseVersion>  <!-- Normalerweise ${project.version} ohne -SNAPSHOT -->
                <developmentVersion>1.3.2252-SNAPSHOT</developmentVersion>
                <tag>v${releaseVersion}</tag>
            </properties>
        </profile>
    </profiles>
</project>
