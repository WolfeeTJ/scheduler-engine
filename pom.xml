<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.sos.scheduler.engine</groupId>
        <artifactId>com.sos.scheduler.engine.parent</artifactId>
        <version>1.3.11-beta-3o</version>
        <relativePath>parent</relativePath>
    </parent>

    <groupId>com.sos.scheduler.engine</groupId>
    <artifactId>com.sos.scheduler.engine</artifactId>
    <version>1.3.11-beta-3o</version>
    
    <packaging>pom</packaging>
    <name>${project.artifactId}</name>
    <inceptionYear>2010</inceptionYear>

    <modules>
        <module>parent</module>
        <module>cplusplus</module>
        <module>kernel</module>
        <module>kernel.cppproxy-generated</module>
        <module>kernel-cpp</module>
        <module>kernel-cpp-test</module>
        <module>playground</module>
        <module>jar</module>
    </modules>

    <properties>
        <!-- Versionsbezeichnungen für die nächste Freigabe und die darauffolgende Entwicklungsversion -->
        <nextReleaseVersion>1.3.11-beta-3o</nextReleaseVersion>  <!-- Normalerweise ${project.version} ohne -SNAPSHOT -->
        <nextDevelopmentVersion>1.3.11-beta-3p-SNAPSHOT</nextDevelopmentVersion>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <releaseVersion>${nextReleaseVersion}</releaseVersion>
                    <developmentVersion>${nextDevelopmentVersion}</developmentVersion>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <tagBase>http://subversion.sos/svn/sos/scheduler/engine-releases</tagBase>
                    <tag>engine-${nextReleaseVersion}</tag>
                    <!--tagNameFormat>{1}</tagNameFormat--><!-- {0} ist ${project.artifactId}, {1} ist ${project.version} -->
                </configuration>
            </plugin>
        </plugins>
    </build>
	
    <scm>
        <connection>scm:svn:http://subversion.sos/svn/sos/scheduler/engine/engine-1.3.11-beta-3o</connection>
        <developerConnection>scm:svn:http://subversion.sos/svn/sos/scheduler/engine-releases/engine-1.3.11-beta-3o</developerConnection>
        <url>http://subversion.sos/svn/sos/scheduler/engine-releases/engine-1.3.11-beta-3o</url>
    </scm>
</project>
