<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.sos.scheduler.engine</groupId>
        <artifactId>com.sos.scheduler.engine.parent</artifactId>
        <version>1.3.11-beta-3g</version>
        <relativePath>parent</relativePath>
    </parent>

    <groupId>com.sos.scheduler.engine</groupId>
    <artifactId>com.sos.scheduler.engine</artifactId>
    <version>1.3.11-beta-3g</version>

    
    <packaging>pom</packaging>
    <name>${project.artifactId}</name>
    <inceptionYear>2010</inceptionYear>

    <modules>
        <module>parent</module>
        <module>cplusplus</module>
        <module>kernel</module>
        <module>kernel.cppproxy-generated</module>
        <module>kernel-cpp</module>
        <module>kernel-cpp-test</module>
        <module>playground</module>
        <module>jar</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <tagBase>http://subversion.sos/svn/sos/scheduler/engine-releases</tagBase>
                    <tagNameFormat>{1}</tagNameFormat>   <!-- {0} ist ${project.artifactId}, {1} ist ${project.version} -->
                </configuration>
            </plugin>
        </plugins>
    </build>
	
    <scm>
        <connection>scm:svn:http://subversion.sos/svn/sos/scheduler/engine/1.3.11-beta-3g</connection>
        <developerConnection>scm:svn:http://subversion.sos/svn/sos/scheduler/engine-releases/1.3.11-beta-3g</developerConnection>
        <url>http://subversion.sos/svn/sos/scheduler/engine/1.3.11-beta-3g</url>
    </scm>

    <profiles>
        <profile>
            <!-- Hier die nÃ¤chste Version einstellen. Freigabe mit: mvn -Prelease release:prepare release:perform -->
            <id>release</id>
            <properties>
                <releaseVersion>1.3.11-beta-3g</releaseVersion> <!-- Normalerweise ${project.version} ohne -SNAPSHOT -->
                <developmentVersion>1.3.11-beta-3h-SNAPSHOT</developmentVersion>
                <tag>${releaseVersion}</tag>
            </properties>
        </profile>
        
        <!--profile>
            <!- -description>Die Module der Engine.
        Der C++/Java-Generator (cplusplus/) ist separat zu bauen oder mit der Option -Pcomplete.</description- ->
            <id>complete</id>
            <modules>
                <module>cplusplus</module>
            </modules>
        </profile-->
    </profiles>
</project>
