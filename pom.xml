    <packaging>pom</packaging>

    <name>${project.groupId}</name>
    <inceptionYear>2010</inceptionYear>

    <modules>
        <module>cplusplus</module>
        <module>kernel</module>
        <module>kernel.cppproxy-generated</module>
        <module>kernel-cpp</module>
        <module>kernel-cpp-test</module>
